---
import { testimonialsConfig } from "../config/site.config";
import Card from "./Card.astro";
---

<section id="testimonials" class="section-padding bg-white relative overflow-hidden">
  <!-- Decorative pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-20 w-40 h-40 border border-primary-500 rounded-full"></div>
    <div class="absolute bottom-20 right-20 w-60 h-60 border border-secondary-500 rounded-full"></div>
    <div class="absolute top-1/2 left-1/2 w-80 h-80 border border-accent-500 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
  </div>
  
  <div class="container-custom relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-flex items-center gap-2 text-primary-600 font-medium text-sm uppercase tracking-widest mb-4">
        <span class="w-8 h-px bg-primary-400"></span>
        Témoignages
        <span class="w-8 h-px bg-primary-400"></span>
      </span>
      
      <h2 class="font-heading text-4xl sm:text-5xl text-secondary-900 mb-6">
        Ce que disent nos <span class="text-primary-500 italic">clients</span>
      </h2>
      
      <p class="text-secondary-600 text-lg">
        La satisfaction de nos clients est notre plus belle récompense. Découvrez leurs avis.
      </p>
    </div>

    <!-- Testimonials grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {testimonialsConfig.map((testimonial, index) => (
        <Card 
          variant="elevated" 
          padding="lg" 
          class="relative group"
        >
          <div class="absolute top-6 right-6 text-primary-200 opacity-50">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
          
          <div class="relative z-10">
            <div class="flex gap-1 mb-4">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg class="w-5 h-5 text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            
            <p class="text-secondary-600 italic leading-relaxed mb-6">
              "{testimonial.text}"
            </p>
            
            <div class="flex items-center gap-4 pt-4 border-t border-secondary-100">
              <div class="w-12 h-12 bg-linear-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-white font-semibold">
                {testimonial.name.charAt(0)}
              </div>
              <div>
                <p class="font-semibold text-secondary-800">{testimonial.name}</p>
                <p class="text-sm text-secondary-500">Client(e) fidèle</p>
              </div>
            </div>
          </div>
        </Card>
      ))}
    </div>

    <!-- Google Reviews badge -->
    <div class="text-center mt-12">
      <div class="inline-flex items-center gap-4 px-6 py-4 bg-secondary-50 rounded-2xl">
        <div class="flex items-center gap-1">
          {Array.from({ length: 5 }).map(() => (
            <svg class="w-6 h-6 text-primary-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        <div class="text-left">
          <p class="font-semibold text-secondary-800">5/5 sur Google</p><!-- TODO: Add Google Reviews link -->
          <p class="text-sm text-secondary-500">Basé sur 127 avis</p>
        </div>
      </div>
    </div>
  </div>
</section>

