---
import { siteConfig } from "../config/site.config";
import Button from "./Button.astro";
import Card from "./Card.astro";
import Map from "./Map.astro";

const hours = [
  { day: "Lundi", time: siteConfig.hours.monday },
  { day: "Mardi", time: siteConfig.hours.tuesday },
  { day: "Mercredi", time: siteConfig.hours.wednesday },
  { day: "Jeudi", time: siteConfig.hours.thursday },
  { day: "Vendredi", time: siteConfig.hours.friday },
  { day: "Samedi", time: siteConfig.hours.saturday },
  { day: "Dimanche", time: siteConfig.hours.sunday },
];
---

<section id="contact" class="section-padding bg-secondary-900 relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl -translate-y-1/2 -translate-x-1/2"></div>
  <div class="absolute bottom-0 right-0 w-72 h-72 bg-accent-500/10 rounded-full blur-3xl translate-y-1/2 translate-x-1/2"></div>
  
  <div class="container-custom relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-flex items-center gap-2 text-primary-400 font-medium text-sm uppercase tracking-widest mb-4">
        <span class="w-8 h-px bg-primary-500"></span>
        Nous contacter
        <span class="w-8 h-px bg-primary-500"></span>
      </span>
      
      <h2 class="font-heading text-4xl sm:text-5xl text-white mb-6">
        Prenez <span class="text-primary-400 italic">rendez-vous</span>
      </h2>
      
      <p class="text-secondary-300 text-lg">
        N'hésitez pas à nous contacter pour toute question ou pour réserver votre prochaine visite.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Left column - Infos & Hours -->
      <div class="space-y-6">
        <!-- Coordinates -->
        <Card variant="glass" padding="lg" class="bg-white/5 border-white/10">
          <h3 class="font-heading text-2xl text-white mb-6">Coordonnées</h3>
          
          <div class="space-y-4">
            <!-- Address -->
            <a 
              href={`https://maps.google.com/?q=${encodeURIComponent(siteConfig.contact.address + ', ' + siteConfig.contact.city)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-start gap-4 p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-colors group"
            >
              <div class="flex-shrink-0 w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center text-primary-400 group-hover:bg-primary-500 group-hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-white font-medium">Adresse</p>
                <p class="text-secondary-300">{siteConfig.contact.address}</p>
                <p class="text-secondary-300">{siteConfig.contact.city}</p>
              </div>
            </a>
            
            <!-- Phone -->
            <a 
              href={`tel:${siteConfig.contact.phone.replace(/\s/g, '')}`}
              class="flex items-start gap-4 p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-colors group"
            >
              <div class="flex-shrink-0 w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center text-primary-400 group-hover:bg-primary-500 group-hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-white font-medium">Téléphone</p>
                <p class="text-secondary-300">{siteConfig.contact.phone}</p>
              </div>
            </a>
            
            <!-- Email address -->
            <a 
              href={`mailto:${siteConfig.contact.email}`}
              class="flex items-start gap-4 p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-colors group"
            >
              <div class="flex-shrink-0 w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center text-primary-400 group-hover:bg-primary-500 group-hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-white font-medium">Email</p>
                <p class="text-secondary-300">{siteConfig.contact.email}</p>
              </div>
            </a>
          </div>
        </Card>

        <!-- Hours -->
        <Card variant="glass" padding="lg" class="bg-white/5 border-white/10">
          <h3 class="font-heading text-2xl text-white mb-6">Horaires d'ouverture</h3>
          
          <div class="space-y-3">
            {hours.map((item) => (
              <div class="flex items-center justify-between py-2 border-b border-white/10 last:border-0">
                <span class="text-secondary-300">{item.day}</span>
                <span class:list={[
                  "font-medium",
                  item.time === "Fermé" ? "text-accent-400" : "text-white"
                ]}>
                  {item.time}
                </span>
              </div>
            ))}
          </div>
        </Card>

        <!-- Social media -->
        <div class="flex items-center gap-4">
          {siteConfig.social.instagram && (
            <a 
              href={siteConfig.social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white hover:bg-primary-500 transition-colors"
              aria-label="Suivez-nous sur Instagram"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          )}
          
          {siteConfig.social.facebook && (
            <a 
              href={siteConfig.social.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white hover:bg-primary-500 transition-colors"
              aria-label="Suivez-nous sur Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Right column - Map -->
      <div class="h-full min-h-[500px]">
        <Map class="h-full" />
      </div>
    </div>

    <!-- Final CTA -->
    <div class="text-center mt-16">
      <Button href={`tel:${siteConfig.contact.phone.replace(/\s/g, '')}`} variant="primary" size="lg">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Appeler maintenant
      </Button>
    </div>
  </div>
</section>

