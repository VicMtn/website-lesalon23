---
import { siteConfig } from "../config/site.config";
import Button from "./Button.astro";
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0 z-0">
    <img
      src="https://images.unsplash.com/photo-1560066984-138dadb4c035?w=1920&q=80"
      alt="Intérieur du salon de coiffure"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-linear-to-b from-secondary-900/60 via-secondary-900/40 to-secondary-900/80"></div>
  </div>

  <!-- Decorative element -->
  <div class="absolute inset-0 z-0 opacity-30">
    <div class="absolute top-20 left-10 w-64 h-64 bg-primary-400/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-400/10 rounded-full blur-3xl"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-custom text-center px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Tagline -->
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-8 animate-fade-in">
        <span class="w-2 h-2 bg-primary-400 rounded-full animate-pulse"></span>
        <span class="text-white/90 text-sm font-medium tracking-wide">
          {siteConfig.tagline}
        </span>
      </div>

      <!-- Main title -->
      <h1 class="font-heading text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-white mb-6 animate-fade-in-up opacity-0" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        <span class="text-primary-300 italic">{siteConfig.name}</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-lg sm:text-xl md:text-2xl text-white/80 max-w-2xl mx-auto mb-10 font-light leading-relaxed animate-fade-in-up opacity-0" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
        {siteConfig.description}
      </p>

      <!-- CTA buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up opacity-0" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
        <Button href={siteConfig.bookingUrl} variant="primary" size="lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Prendre rendez-vous
        </Button>
        <Button href="#services" variant="outline" size="lg" class="border-white/50 text-white hover:bg-white hover:text-secondary-800">
          Découvrir nos services
        </Button>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <a href="#about" class="flex flex-col items-center gap-2 text-white/60 hover:text-white/90 transition-colors" aria-label="Défiler vers le bas">
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>

