---
import { siteConfig } from "../config/site.config";

interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class:list={["relative overflow-hidden rounded-2xl shadow-lg", className]}>
  <iframe
    src={siteConfig.mapEmbedUrl}
    width="100%"
    height="100%"
    style="border:0; min-height: 400px;"
    allowfullscreen
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title="Localisation du salon"
    class="grayscale hover:grayscale-0 transition-all duration-500"
  ></iframe>
  
  <!-- Overlay with address -->
  <div class="absolute bottom-0 left-0 right-0 bg-linear-to-t from-secondary-900/90 to-transparent p-6">
    <div class="flex items-start gap-3 text-white">
      <div class="shrink-0 w-10 h-10 bg-primary-500 rounded-full flex items-center justify-center">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <div>
        <p class="font-semibold">{siteConfig.name}</p>
        <p class="text-white/80 text-sm">{siteConfig.contact.address}, {siteConfig.contact.city}</p>
      </div>
    </div>
  </div>
</div>

